	// default date format 
	final private SimpleDateFormat DateFormate = new SimpleDateFormat("yyyyMMdd");
	private Quote quotes[] = new Quote[TradeMinutes] ;
	
	final public GregorianCalendar date;
	
	StockTradingDay(GregorianCalendar _date)
	{
		this.date=_date;
	}
	
	public void add_new_quote(GregorianCalendar _date, Quote _quote)
	{
		if (_date.c)
			throw new Exception("Can't add quote to different date ")
	}
	
	
	
}
